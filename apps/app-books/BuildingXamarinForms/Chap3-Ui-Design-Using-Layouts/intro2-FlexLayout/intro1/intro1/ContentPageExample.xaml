<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="intro1.ContentPageExample" 
             Padding="10,10,10,5">
    <ContentPage.Content>
        <ScrollView>
            <!--intro1-Use FlexLayout for stacking or wrapping a collection of child views.-->
            <!--Direction="Column" AlignItems="Center" JustifyContent="SpaceEvenly"-->
            <!--Direction="Row" AlignItems="Center" JustifyContent="Start"-->
            <!--Direction="Row" AlignItems="Start" JustifyContent="Start"-->
            <!--override AlignItems for a single View using FlexLayout.AlignSelf.-->
            <FlexLayout Direction="Row" AlignItems="Start" JustifyContent="Start">
                <Button Text="First" />
                <Button Text="Second" />
                <Button Text="Third" />
            </FlexLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>